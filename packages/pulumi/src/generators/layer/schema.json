{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "id": "Pulumi",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "description": {
      "type": "string",
      "description": "Add Description to the layer",
      "alias": "d",
      "$default": "Layer description"
    },
    "tags": {
      "type": "string",
      "description": "Add tags to the layer (used for linting)",
      "alias": "t"
    }
  },
  "required": ["name"]
}
